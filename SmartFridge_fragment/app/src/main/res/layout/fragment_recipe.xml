
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mylayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.itsadmin.smartfridge_fragment.Main.Fragments.RecipeFragment">

    <ScrollView

        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout

            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/catAntipasti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Antipasti"/>

            <android.support.v7.widget.RecyclerView

                android:id="@+id/rec_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_below="@id/catAntipasti"
                android:layout_marginBottom="20dp"/>

            <TextView

                android:id="@+id/catPrimi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rec_view"
                android:text="Primi"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_alignLeft="@id/catAntipasti"
                android:layout_alignRight="@id/catAntipasti"/>

            <android.support.v7.widget.RecyclerView

                android:id="@+id/rec_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/catPrimi"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/catSecondi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secondi"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/rec_view2"
                android:layout_alignLeft="@id/catAntipasti"
                android:layout_alignRight="@id/catAntipasti"/>

            <android.support.v7.widget.RecyclerView

                android:id="@+id/rec_view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/catSecondi"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/catDolci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dolci"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/rec_view3"
                android:layout_alignLeft="@id/catAntipasti"
                android:layout_alignRight="@id/catAntipasti"/>

            <android.support.v7.widget.RecyclerView

                android:id="@+id/rec_view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/catDolci"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView

                android:id="@+id/catSpuntini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rec_view4"
                android:text="Spuntini"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_alignLeft="@id/catAntipasti"
                android:layout_alignRight="@id/catAntipasti"/>

            <android.support.v7.widget.RecyclerView

                android:id="@+id/rec_view5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/catSpuntini"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>

    </ScrollView>

    <include layout="@layout/fab"></include>

</FrameLayout>
