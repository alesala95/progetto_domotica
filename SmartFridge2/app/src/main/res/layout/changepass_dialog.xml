<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/currentPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/newPass"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Inserisci password attuale"
        android:inputType="textPassword"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/newPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/currentPass"
        android:layout_marginTop="11dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:ems="10"
        android:hint="Inserisci nuova password"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/confirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newPass"
        android:layout_below="@+id/newPass"
        android:layout_marginTop="19dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Reinserisci la password" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Cambio password"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="10dp"
        />



</RelativeLayout>