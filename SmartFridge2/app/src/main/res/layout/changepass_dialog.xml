<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/currentPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newPass"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:layout_alignRight="@id/newPass"
        android:hint="Inserisci password attuale"
        android:inputType="textPassword"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/newPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/currentPass"
        android:layout_marginTop="11dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:ems="10"
        android:hint="Inserisci nuova password"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/confirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPass"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_alignLeft="@id/newPass"
        android:layout_alignRight="@id/newPass"
        android:hint="Reinserisci la password"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimary"
        android:text="Cambia password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="22sp" />

</RelativeLayout>