<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FloatingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|right"
        android:clickable="true"

        android:focusable="true"
        android:src="@mipmap/fab"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="normal"
        android:padding="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:elevation="2dp"
        />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FBAsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/FloatingBtn"
        android:layout_alignEnd="@+id/FloatingBtn"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="7dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="mini"
        app:srcCompat="@mipmap/search" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FBAadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/FBAsearch"
        android:layout_alignEnd="@+id/FBAsearch"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="mini"
        app:srcCompat="@mipmap/add" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FBAfavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/FBAadd"
        android:layout_alignEnd="@+id/FBAadd"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="mini"
        app:srcCompat="@mipmap/star" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FBAshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/FBAfavourite"
        android:layout_alignEnd="@+id/FBAfavourite"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="mini"
        app:srcCompat="@mipmap/share" />



    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"

        android:background="@drawable/roundedsearch"
        android:drawableLeft="@mipmap/searchedit"
        android:ems="10"
        android:hint="Es. Cena, Pranzo, Pasta, Carne"
        android:inputType="text"
        android:visibility="gone" />

</RelativeLayout>