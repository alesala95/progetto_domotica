<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Settings.Fragments.AccountFragment">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <TextView

            android:id="@+id/headerNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="15dp"
            android:text="Nome"
            android:textColor="@android:color/darker_gray"
            android:textSize="17dp" />

        <TextView

            android:id="@+id/nomeAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/headerNome"
            android:layout_below="@+id/headerNome"
            android:text="nome"
            android:textColor="@android:color/black"
            android:textSize="17dp" />

        <android.support.v4.view.ViewPager

            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nomeAccount"
            android:layout_marginTop="11dp"
            android:background="#ECEFF1" />

        <TextView

            android:id="@+id/headerCognomeA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nomeAccount"
            android:layout_below="@+id/div"
            android:layout_marginTop="15dp"
            android:text="Cognome"
            android:textColor="@android:color/darker_gray"
            android:textSize="17dp" />

        <TextView

            android:id="@+id/cognomeAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/headerCognomeA"
            android:layout_below="@+id/headerCognomeA"
            android:text="cognome"
            android:textColor="@android:color/black"
            android:textSize="17dp" />

        <android.support.v4.view.ViewPager

            android:id="@+id/div1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cognomeAccount"
            android:layout_marginTop="11dp"
            android:background="#ECEFF1" />

        <TextView

            android:id="@+id/headerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cognomeAccount"
            android:layout_below="@+id/div1"
            android:layout_marginTop="15dp"
            android:text="Email"
            android:textColor="@android:color/darker_gray"
            android:textSize="17dp" />

        <TextView

            android:id="@+id/emailAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/headerEmail"
            android:layout_below="@+id/headerEmail"
            android:text="prova@gmail.com"
            android:textColor="@android:color/black"
            android:textSize="17dp" />

        <android.support.v4.view.ViewPager

            android:id="@+id/div2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/emailAccount"
            android:layout_marginTop="11dp"
            android:background="#ECEFF1" />

        <TextView

            android:id="@+id/changePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emailAccount"
            android:layout_below="@+id/div2"
            android:layout_marginTop="15dp"
            android:text="Cambia password"
            android:textColor="@android:color/black"
            android:textSize="17dp" />

        <android.support.v4.view.ViewPager

            android:id="@+id/div3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/changePass"
            android:layout_marginTop="15dp"
            android:background="#ECEFF1" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_registrati"
            android:text="Esci"
            android:layout_below="@+id/div3"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:clickable="true"
            android:layout_marginTop="24dp"
            android:elevation="2dp"
            style="@style/Base.TextAppearance.AppCompat.Body1" />

    </RelativeLayout>

</FrameLayout>
